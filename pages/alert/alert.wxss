/* pages/alert/alert.wxss */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.add-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.add-btn image {
  width: 40rpx;
  height: 40rpx;
}

.alert-list {
  padding: 10rpx;
}

.alert-item {
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.alert-content {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.etf-info {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.etf-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-right: 10rpx;
}

.etf-code {
  font-size: 24rpx;
  color: #666;
}

.alert-info {
  margin-top: 10rpx;
}

.alert-condition {
  font-size: 28rpx;
  margin-bottom: 6rpx;
}

.alert-price {
  font-weight: bold;
  color: #1E88E5;
}

.alert-time {
  font-size: 24rpx;
  color: #999;
}

.alert-actions {
  display: flex;
  justify-content: flex-end;
  padding: 16rpx 20rpx;
}

.action-btn {
  margin-left: 20rpx;
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 4rpx;
}

.status-btn {
  border: 1rpx solid;
}

.status-btn.active {
  color: #1E88E5;
  border-color: #1E88E5;
}

.status-btn.inactive {
  color: #999;
  border-color: #999;
}

.delete-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 40rpx;
  height: 40rpx;
}

.delete-btn image {
  width: 32rpx;
  height: 32rpx;
}

.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-tip image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 30rpx;
}

.add-alert-btn {
  background-color: #1E88E5;
  color: #fff;
  padding: 16rpx 40rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.loading {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #1E88E5;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}