/* pages/alert/add.wxss */
.header {
  padding: 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
}

.alert-form {
  padding: 20rpx;
  margin-bottom: 40rpx;
}

.form-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  width: 180rpx;
  font-size: 28rpx;
  color: #666;
}

.form-value {
  flex: 1;
  font-size: 28rpx;
}

.condition-group {
  display: flex;
}

.condition-item {
  display: flex;
  align-items: center;
  margin-right: 40rpx;
}

.condition-item text {
  margin-left: 8rpx;
}

.price-input {
  border: 1rpx solid #ddd;
  border-radius: 4rpx;
  padding: 10rpx;
  width: 100%;
  box-sizing: border-box;
}

.btn-group {
  display: flex;
  padding: 0 20rpx;
}

.btn-cancel, .btn-save {
  flex: 1;
  margin: 0 10rpx;
  font-size: 32rpx;
  border-radius: 8rpx;
}

.btn-cancel {
  background-color: #f5f5f5;
  color: #666;
}

.btn-save {
  background-color: #1E88E5;
  color: #fff;
}