/* pages/index/index.wxss */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eee;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.refresh-btn {
  font-size: 28rpx;
  color: #1E88E5;
  padding: 10rpx 20rpx;
}

.refreshing {
  animation: rotate 1s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

.update-time {
  font-size: 24rpx;
  color: #999;
  text-align: right;
  padding: 10rpx 20rpx;
}

.etf-list {
  padding: 10rpx;
}

.etf-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.etf-info {
  flex: 1;
}

.etf-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 6rpx;
}

.etf-code {
  font-size: 24rpx;
  color: #666;
}

.etf-price {
  text-align: right;
  margin-right: 20rpx;
}

.current-price {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 6rpx;
}

.price-change {
  font-size: 24rpx;
}

.price-change text {
  margin-left: 10rpx;
}

.favorite-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.favorite-btn image {
  width: 40rpx;
  height: 40rpx;
}

.loading {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 40rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #1E88E5;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

.empty-tip {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 28rpx;
}