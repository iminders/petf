<!-- pages/news/news.wxml -->
<view class="container">
  <view class="header">
    <view class="title">ETF资讯</view>
  </view>
  
  <view class="news-list">
    <view class="news-item card" wx:for="{{newsList}}" wx:key="id" bindtap="viewNewsDetail" data-url="{{item.url}}">
      <view class="news-title">{{item.title}}</view>
      <view class="news-summary">{{item.summary}}</view>
      <view class="news-meta">
        <text class="news-source">{{item.source}}</text>
        <text class="news-time">{{item.publishTime}}</text>
      </view>
    </view>
  </view>
  
  <view class="loading" wx:if="{{loading}}">
    <view class="loading-spinner"></view>
    <view class="loading-text">加载中...</view>
  </view>
  
  <view class="loading-more" wx:if="{{loadingMore}}">
    <view class="loading-spinner small"></view>
    <view class="loading-text">加载更多...</view>
  </view>
  
  <view class="no-more" wx:if="{{!hasMore && newsList.length > 0}}">
    没有更多内容了
  </view>
  
  <view class="empty-tip" wx:if="{{!loading && newsList.length === 0}}">
    暂无资讯
  </view>
</view>